<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hidiki.afro.afro.Dialoges">

    <Button
        android:id="@+id/BtnAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:onClick="onClickAlert"
        android:text="Show AlertDialog" />

    <Button
        android:id="@+id/BtnClrs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:onClick="onClickListAlert"
        android:text="Show Dialog list choice" />

    <Button
        android:id="@+id/Btnsngle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:onClick="onClickSingleChoice"
        android:text="Show Singlechoice alert" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:onClick="onClickMultipleChoice"
        android:text="Show multiple choice dialog" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:onClick="onClickCustom"
        android:text="Show Custom  AlertDialog" />

    <TextView
        android:id="@+id/dialogtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:text="TextView"
        android:textSize="24sp" />

</LinearLayout>
